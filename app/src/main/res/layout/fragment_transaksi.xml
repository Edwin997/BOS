<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-4dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/apps_transaksi_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <Switch
        android:id="@+id/apps_transaksi_fragment_switch"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:thumb="@drawable/switch_custom_thumb_selector_purple"
        android:track="@drawable/switch_custom_slide_selector"
        android:fontFamily="@font/opensans_bold"
        android:textOn="Transaksi Offline"
        android:textOff="Transaksi Online"
        android:showText="true"
        android:thumbTextPadding="30dp"
        android:switchTextAppearance="@style/SwitchTextAppearance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>