<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <!--HOME KEYBOARD-->
    <LinearLayout
        android:id="@+id/bcabos_extended_home_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="start"
        android:background="@drawable/gradient_color_box"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bcabos_extended_home_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:src="@drawable/bca_bos_text_white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bcabos_extended_home_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"/>


    </LinearLayout>

    <!--FITUR KEYBOARD-->
    <LinearLayout
        android:id="@+id/bcabos_extended_feature_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/gradient_color_box"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/bcabos_extended_feature_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_keyboard_back_white" />

        <Button
            android:id="@+id/bcabos_extended_feature_stok_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:padding="4dp"
            android:drawableLeft="@drawable/ic_keyboard_stok_produk"
            android:gravity="left|center_vertical"
            android:text="Stok Produk"
            android:textAlignment="center"
            android:textColor="@color/dark_white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/bcabos_extended_feature_ongkir_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:padding="4dp"
            android:drawableLeft="@drawable/ic_bcabos_cek_ongkir"
            android:gravity="left|center_vertical"
            android:text=" Cek Ongkir"
            android:textAlignment="center"
            android:textColor="@color/dark_white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/bcabos_extended_feature_form_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:padding="4dp"
            android:drawableLeft="@drawable/ic_bcabos_kirim_form"
            android:gravity="left|center_vertical"
            android:text="Kirim Formulir"
            android:textAlignment="center"
            android:textColor="@color/dark_white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/bcabos_extended_feature_mutasi_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:padding="4dp"
            android:drawableLeft="@drawable/ic_bcabos_cek_mutasi"
            android:gravity="left|center_vertical"
            android:text="Cek Mutasi"
            android:textAlignment="center"
            android:textColor="@color/dark_white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <!--CEK ONGKIR-->
    <LinearLayout
        android:id="@+id/bcabos_ongkir_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/bcabos_ongkir_berat_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_ongkir_berat_check_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_check"
                android:layout_marginTop="4dp"
                android:paddingRight="10dp"
                android:paddingLeft="16dp"
                android:background="@android:color/transparent"/>

            <EditText
                android:id="@+id/bcabos_ongkir_berat_text"
                style="@style/editText_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/grey"
                android:textSize="14dp"
                android:hint="Berat(kg)*"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_ongkir_asal_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_ongkir_asal_check_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_check"
                android:layout_marginTop="4dp"
                android:paddingRight="10dp"
                android:paddingLeft="16dp"
                android:background="@android:color/transparent"/>

            <EditText
                android:id="@+id/bcabos_ongkir_asal_text"
                style="@style/editText_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/grey"
                android:textSize="14dp"
                android:hint="Asal pengiriman*"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_ongkir_tujuan_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_ongkir_tujuan_check_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_check"
                android:layout_marginTop="4dp"
                android:paddingRight="10dp"
                android:paddingLeft="16dp"
                android:background="@android:color/transparent"/>

            <EditText
                android:id="@+id/bcabos_ongkir_tujuan_text"
                style="@style/editText_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/grey"
                android:textSize="14dp"
                android:hint="Tujuan Pengiriman*"
                android:selectAllOnFocus="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_ongkir_cekongkir_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="16dp"
            android:layout_marginBottom="8dp"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_ongkir_cekongkir_back_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient" />

            <Button
                android:id="@+id/bcabos_ongkir_cekongkir_check_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_color_rounded_box"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="CEK ONGKOS KIRIM"
                android:textAlignment="center"
                android:textColor="@color/dark_white"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!--KEYBOARD-->
    <android.inputmethodservice.KeyboardView
        android:id="@+id/bcabos_keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"

        android:keyTextColor="@color/key_text_color"
        android:keyBackground="@drawable/style_keyboard_key_background"

        android:shadowRadius="0.0"
        android:background="@color/light_grey">
    </android.inputmethodservice.KeyboardView>

</LinearLayout>