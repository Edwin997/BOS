        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_kirimform_next_kirim_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="10"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_kirimform_next_back_button"
                android:layout_gravity="top"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient" />

            <Button
                android:id="@+id/bcabos_kirimform_next_kirim_button"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/style_gradient_color_rounded_box"
                android:text="KIRIM FORM"
                android:textAlignment="center"
                android:textColor="@color/dark_white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/bcabos_kirimform_next_refresh_button"
                android:layout_gravity="top"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_keyboard_refresh_refresh" />

        </LinearLayout>

    </LinearLayout>

    <!--MUTASI REKENING-->
    <LinearLayout
        android:id="@+id/bcabos_extended_mutasi_layout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:gravity="start"
        android:background="@color/light_grey"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="10"
            android:gravity="top"
            android:orientation="horizontal"
            android:background="@color/light_grey">

            <ImageButton
                android:id="@+id/bcabos_mutasi_back_button"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient"/>

            <TextView
                android:layout_weight="8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Mutasi Rekening"
                android:textColor="@color/dark_blue"
                android:textSize="16dp"
                android:textStyle="bold"
                android:inputType="number"/>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bcabos_extended_mutasi_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!--KEYBOARD-->
    <android.inputmethodservice.KeyboardView
        android:id="@+id/bcabos_keyboard_view"
        android:layout_width="match_parent"
