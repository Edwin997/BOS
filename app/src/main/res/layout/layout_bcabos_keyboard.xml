<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_grey"
    android:orientation="vertical">

    <!--HOME KEYBOARD-->
    <LinearLayout
        android:id="@+id/bcabos_extended_home_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="start"
        android:background="@drawable/style_gradient_color_box"
        android:orientation="horizontal">



        <ImageButton
            android:id="@+id/bcabos_extended_home_button"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:src="@drawable/bos_logo_round" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bcabos_extended_home_recyclerview"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:padding="5dp"/>

        <ImageButton
            android:id="@+id/bcabos_extended_home_button_add_template"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:src="@drawable/ic_apps_add_filled_white" />
    </LinearLayout>

    <!--FITUR KEYBOARD-->
    <LinearLayout
        android:id="@+id/bcabos_extended_feature_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/style_gradient_color_box"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/bcabos_extended_feature_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_keyboard_back_white" />

        <Button
            android:id="@+id/bcabos_extended_feature_stok_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:padding="4dp"
            android:drawableLeft="@drawable/ic_keyboard_stok_produk"
            android:gravity="left|center_vertical"
            android:text="Stok Produk"
            android:textAlignment="center"
            android:textColor="@color/dark_white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/bcabos_extended_feature_ongkir_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:padding="4dp"
            android:drawableLeft="@drawable/ic_bcabos_cek_ongkir"
            android:gravity="left|center_vertical"
            android:text=" Cek Ongkir"
            android:textAlignment="center"
            android:textColor="@color/dark_white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/bcabos_extended_feature_form_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:padding="4dp"
            android:drawableLeft="@drawable/ic_bcabos_kirim_form"
            android:gravity="left|center_vertical"
            android:text="Kirim Formulir"
            android:textAlignment="center"
            android:textColor="@color/dark_white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/bcabos_extended_feature_mutasi_button"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:padding="4dp"
            android:drawableLeft="@drawable/ic_bcabos_cek_mutasi"
            android:gravity="left|center_vertical"
            android:text="Cek Mutasi"
            android:textAlignment="center"
            android:textColor="@color/dark_white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <!--CEK ONGKIR-->
    <LinearLayout
        android:id="@+id/bcabos_ongkir_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:background="@color/light_grey"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/bcabos_ongkir_asal_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_ongkir_asal_back_button"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <AutoCompleteTextView
                    android:id="@+id/bcabos_ongkir_asal_auto_complete_text_view"
                    style="@style/editText_style_white"
                    android:dropDownHeight="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:completionThreshold="1"
                    android:hint="Asal pengiriman*"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_ongkir_tujuan_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_ongkir_tujuan_back_button"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <AutoCompleteTextView
                    android:id="@+id/bcabos_ongkir_tujuan_auto_complete_text_view"
                    style="@style/editText_style_white"
                    android:dropDownHeight="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:completionThreshold="1"
                    android:hint="Tujuan Pengiriman*"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_ongkir_berat_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_ongkir_berat_back_button"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <EditText
                    android:id="@+id/bcabos_ongkir_berat_text"
                    style="@style/editText_style_white"
                    android:dropDownHeight="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:hint="Berat(gram)*"
                    android:inputType="number"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_ongkir_kurir_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_ongkir_kurir_back_button"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:weightSum="3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/jneButton"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/style_gradient_color_rounded_box_grey"
                    android:text="JNE"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/tikiButton"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/style_gradient_color_rounded_box_grey"
                    android:text="TIKI"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/posButton"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/style_gradient_color_rounded_box_grey"
                    android:text="POS"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_ongkir_cekongkir_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:weightSum="10"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_ongkir_cekongkir_back_button"
                android:layout_gravity="top"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient" />

            <Button
                android:id="@+id/bcabos_ongkir_cekongkir_check_button"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/style_gradient_color_rounded_box"
                android:text="CEK ONGKOS KIRIM"
                android:textAlignment="center"
                android:textColor="@color/dark_white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/bcabos_ongkir_cekongkir_refresh_button"
                android:layout_gravity="top"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_keyboard_refresh_refresh" />

        </LinearLayout>

    </LinearLayout>

    <!--STOK PRODUK-->
    <LinearLayout
        android:id="@+id/bcabos_stok_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/bcabos_stok_search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/bcabos_stok_search_back_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_keyboard_back_gradient" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="7"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp">

                <EditText
                    android:id="@+id/bcabos_stok_search_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/style_edittext_background_white"
                    android:hint="Search..."
                    android:paddingLeft="16dp"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


            <ImageButton
                android:id="@+id/bcabos_stok_search_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_keyboard_search_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_stok_produk_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="16dp"
            android:visibility="visible">

            <Spinner
                android:id="@+id/bcabos_stok_spinner_filter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bcabos_stok_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8" />
        </LinearLayout>
    </LinearLayout>

    <!--KIRIM FORM-->
    <LinearLayout
        android:id="@+id/bcabos_kirimform_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/bcabos_kirimform_search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_kirimform_produk_button_back_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp">

                <EditText
                    android:id="@+id/bcabos_kirimform_search_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/style_edittext_background_white"
                    android:hint="Search..."
                    android:paddingLeft="16dp"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/bcabos_kirimform_search_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_keyboard_search_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_kirimform_produk_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bcabos_kirimform_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_kirimform_produk_button_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="visible">

            <Button
                android:id="@+id/bcabos_kirimform_produk_button_next_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/style_gradient_color_rounded_box"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="NEXT"
                android:textAlignment="center"
                android:textColor="@color/dark_white"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <!--KIRIM FORM NEXT-->
    <LinearLayout
        android:id="@+id/bcabos_kirimform_next_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:background="@color/light_grey"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/bcabos_kirimform_next_asal_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_kirimform_next_asal_back_button"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <AutoCompleteTextView
                    android:id="@+id/bcabos_kirimform_next_asal_auto_complete_text_view"
                    style="@style/editText_style_white"
                    android:dropDownHeight="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:completionThreshold="1"
                    android:hint="Asal pengiriman*"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_kirimform_next_tujuan_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_kirimform_next_tujuan_back_button"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <AutoCompleteTextView
                    android:id="@+id/bcabos_kirimform_next_tujuan_auto_complete_text_view"
                    style="@style/editText_style_white"
                    android:dropDownHeight="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:completionThreshold="1"
                    android:hint="Tujuan Pengiriman*"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_kirimform_next_berat_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="top"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_kirimform_next_berat_back_button"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <EditText
                    android:id="@+id/bcabos_kirimform_next_berat_text"
                    style="@style/editText_style_white"
                    android:dropDownHeight="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/grey"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:hint="Berat(gram)*"
                    android:inputType="number"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bcabos_kirimform_next_kurir_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/bcabos_kirimform_next_kurir_back_button"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_keyboard_back_gradient"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:weightSum="3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bcabos_kirimform_next_jne_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/style_gradient_color_rounded_box_grey"
                    android:text="JNE"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/bcabos_kirimform_next_tiki_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/style_gradient_color_rounded_box_grey"
                    android:text="TIKI"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/bcabos_kirimform_next_pos_btn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/style_gradient_color_rounded_box_grey"
                    android:text="POS"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

