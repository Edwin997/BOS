<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="40dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:src="@drawable/pak_william"
        app:civ_border_width="8dp"
        app:civ_border_color="@color/black"
        android:translationZ="3dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="-48dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:text="William"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="1234 - 1234 -5678 - 5678"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingLeft="24dp"
                android:text="Username"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="bosnyawinstok"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="24dp"
                android:text="Password"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="**********"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:background="@drawable/style_red_gradient_color_box"
                android:layout_marginLeft="24dp"
                android:text="Ganti Password"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="24dp"
                android:text="No. Hp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="08123123123"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="24dp"
                android:text="Nama Toko"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="Toko Sepatu Winstok"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="24dp"
                android:text="Kota"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="Jakarta Barat"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingLeft="24dp"
                android:text="Ekspedisi Pilihan"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingBottom="24dp"
                android:text="JNE - TIKI"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="60dp"
        app:cardCornerRadius="40dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/style_gradient_color_rounded_box">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_apps_edit_white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>