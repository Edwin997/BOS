<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_apps_bottom_sheet_container_transaksi_pesananbaru"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/style_bottom_sheet_background_white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:background="@drawable/bottomsheet_puller"/>

    <TextView
        android:id="@+id/tv_apps_bottom_sheet_transaksi_pesananbaru_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="Pesanan Baru"
        android:textColor="@color/purple"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_apps_bottom_sheet_transaksi_pesananbaru_nama"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Mahendra Tirta"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_apps_bottom_sheet_transaksi_pesananbaru_tanggal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="01/02/2020"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_apps_bottom_sheet_transaksi_pesananbaru_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="0815512345"
            android:textColor="@color/purple"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_apps_bottom_sheet_transaksi_pesananbaru_total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Rp100.000,00"
            android:textColor="@color/purple"
            android:textSize="14dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_apps_bottom_sheet_transaksi_pesananbaru_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Alamat tidak ditemukan"
        android:textColor="@color/black"
        android:textSize="14dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_height="150dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_apps_bottom_sheet_transaksi_pesananbaru"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_apps_bottom_sheet_transaksi_pesananbaru_ingatkan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Ingatkan"
                android:background="@drawable/switch_custom_thumb_selector_purple"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_apps_bottom_sheet_transaksi_pesananbaru_batalkan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:text="Batalkan"
                android:background="@drawable/style_gradient_color_rounded_box_red"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>