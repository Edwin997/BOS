<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_apps_bottom_sheet_container_edit"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_bottom_sheet_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="3"
            android:text="Ubah Template Teks"
            android:textColor="@color/dark_grey"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_apps_delete_blue"/>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/apps_bottom_sheet_et_label_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Label Template Teks"
            android:maxLength="20"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/apps_bottom_sheet_et_deskripsi_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="100dp"
            android:maxLength="200"
            android:gravity="bottom"
            android:hint="Deskripsi Template Teks"
            android:maxLines="5"
            android:inputType="textPersonName|textMultiLine"/>

        <Button
            android:id="@+id/apps_bottom_sheet_btn_simpan_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_gradient_color_rounded_box"
            android:text="SIMPAN"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>