    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/apps_otp_first_digit_image_view"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/ic_apps_masked_password"
            android:padding="25dp"
            android:background="@drawable/style_gradient_color_rounded_box_outline"/>

        <ImageView
            android:id="@+id/apps_otp_second_digit_image_view"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_apps_masked_password"
            android:padding="25dp"
            android:background="@drawable/style_gradient_color_rounded_box_outline"/>

        <ImageView
            android:id="@+id/apps_otp_third_digit_image_view"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_apps_masked_password"
            android:padding="25dp"
            android:background="@drawable/style_gradient_color_rounded_box_outline"/>

        <ImageView
            android:id="@+id/apps_otp_fourth_digit_image_view"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_apps_masked_password"
            android:padding="25dp"
            android:background="@drawable/style_gradient_color_rounded_box_outline"/>

    </LinearLayout>

    //Keyboard
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/apps_otp_one_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="1"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_bold"/>

                <Button
                    android:id="@+id/apps_otp_two_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="2"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_bold"/>

                <Button
                    android:id="@+id/apps_otp_three_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="3"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/apps_otp_four_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="4"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_bold"/>

                <Button
                    android:id="@+id/apps_otp_five_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="5"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_bold"/>

                <Button
                    android:id="@+id/apps_otp_six_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="6"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/apps_otp_seven_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="7"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_bold"/>

                <Button
                    android:id="@+id/apps_otp_eight_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="8"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_bold"/>

                <Button
                    android:id="@+id/apps_otp_nine_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="9"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_bold"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/apps_otp_zero_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="0"
                    android:textSize="18dp"
                    android:fontFamily="@font/opensans_bold"/>

                <ImageButton
                    android:id="@+id/apps_otp_delete_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_keyboard_backspace"
                    android:fontFamily="@font/opensans_bold"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/apps_otp_error_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Error"
        android:textColor="@color/red"
        android:textSize="16dp"/>


</LinearLayout>