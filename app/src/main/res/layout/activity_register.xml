<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="24dp"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="10"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/register_back_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_keyboard_back_black"/>
<!--        <TextView-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="6"-->
<!--            android:layout_gravity="center"-->
<!--            android:fontFamily="@font/opensans_bold"-->
<!--            android:text="Register"-->
<!--            android:textAlignment="center"-->
<!--            android:textColor="@color/dark_blue"-->
<!--            android:textSize="18dp"-->
<!--            android:textStyle="bold"/>-->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_keyboard_next_gradient"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_tv_bos_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="BOS ID"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="8dp"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp">

            <EditText
                android:id="@+id/register_et_bos_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textColorHint="@color/grey"
                android:hint="BOS ID"
                android:imeOptions="actionNext"
                android:singleLine="true"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/register_tv_no_kartu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nomor Rekening"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="8dp"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp">

            <EditText
                android:id="@+id/register_et_no_kartu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textColorHint="@color/grey"
                android:hint="Nomor Rekening"
                android:imeOptions="actionNext"
                android:singleLine="true"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/register_tv_no_hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Nomor HP"
            android:textColor="@color/dark_blue"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp">

            <EditText
                android:id="@+id/register_et_no_hp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textColorHint="@color/grey"
                android:hint="Nomor HP"
                android:imeOptions="actionNext"
                android:singleLine="true"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/register_tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:text="Password"
            android:textColor="@color/dark_blue"
            android:textSize="10dp"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp">

            <EditText
                android:id="@+id/register_et_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textColorHint="@color/grey"
                android:hint="Password"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:imeOptions="actionDone"
                android:singleLine="true"/>


        </androidx.cardview.widget.CardView>

        <!--    <TextView-->
        <!--        android:id="@+id/textViewError"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:text="Error"-->
        <!--        android:textColor="@color/red"-->
        <!--        android:textSize="16dp"/>-->

        <Button
            android:id="@+id/register_register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="64dp"
            android:layout_marginLeft="64dp"
            android:background="@drawable/style_gradient_color_rounded_box"
            android:fontFamily="@font/montserrat_bold"
            android:text="Register"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>