<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey"
    tools:context=".MainActivity">


    <AutoCompleteTextView
        android:id="@+id/asalAutoCompleteTextView"
        style="@style/editText_style_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Kota Asal"
        android:completionThreshold="1"
        android:completionHint="Kota Asal"/>

    <AutoCompleteTextView
        android:id="@+id/tujuanAutoCompleteTextView"
        style="@style/editText_style_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/black"
        android:hint="Kota Tujuan"
        android:completionThreshold="1"
        android:completionHint="Kota Tujuan"/>

    <EditText
        android:id="@+id/beratEditText"
        style="@style/editText_style_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Berat"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cek Ongkir" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mantap"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20dp"/>

</LinearLayout>