<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">

            <gradient
                android:angle="0"
                android:startColor="#3c3b3d"
                android:endColor="#545456"/>

            <corners
                android:radius="15dp"/>
            <size
                android:width="60dp"
                android:height="30dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">

            <gradient
                android:angle="0"
                android:startColor="#3e2471"
                android:endColor="#674089"/>

            <corners
                android:radius="15dp"/>
            <size
                android:width="60dp"
                android:height="30dp" />
        </shape>
    </item>
</selector>